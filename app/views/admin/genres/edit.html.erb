<h4>ジャンル編集</h4>

<%= form_with model: @genre, url: admin_genre_path(@genre), local:true do |f| %>

<div class = "form-group">
<label for="user_image">ジャンル名</label>
<%= f.text_field :name, class: "form-control name", autofocus: true, placeholder:"名前"%>
</div>

<div class="form-group">
<%= f.submit "変更を保存", class: "btn btn-sm btn-success" %>
</div>

<% end %>