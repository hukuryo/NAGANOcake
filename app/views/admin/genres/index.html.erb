<h4>ジャンル一覧・追加</h4>

<%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>

<div class="form-group">
<label for="user_name">ジャンル名</label>
<%= f.text_field :name, class: "form-control name", autofocus: true, placeholder:"名前"%>
</div>
<div class="form-group">
<%= f.submit "新規登録", class: "btn btn-sm btn-success"%>
</div>

<div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-3">
  </div>
  
 <div class="col-md-8 offset-md-1">
   <table class="table table-hover table-inverse">
    <thead>
     <tr>
      <th>ジャンル</th>
      <th></th>
     </tr>
    </thead>
    
  <tbody>
   <% @genres.each do |genre| %>
    <tr>
     <td><%= genre.name %></td>
     <td><%= link_to '編集する', edit_admin_genre_path(genre), class: "btn btn-sm btn-success"%></td>
    </tr>
     <% end %>
  </tbody>
 </table>
 </div>
 </div>
 </div>

<% end %>

