<h4>商品詳細</h4>

<%= attachment_image_tag @item, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %>

<div class = "form-group">
<label for="user_image">商品名</label>
<%= @item.name %>
</div>

<div class = "form-group">
<label for="user_image">商品説明</label>
<%= @item.introduction %>
</div>

<div class = "form-group">
<label for="user_image">ジャンル</label>
<%= @item.genre.name %>
</div>

<div class = "form-group">
<label for="user_image">税込価格(税抜き価格)</label>
<%= @item.price %>
</div>

<div class = "form-group">
    <label for="user_image">販売ステータス</label>
    <% if @item.is_acactive == true %>
        <p>販売中</p>
        <% else %>
        <p>販売停止中</p>
    <% end %>
</div>

