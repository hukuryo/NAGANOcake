<h4><%= @customers.first_name %><%= @customers.last_name %>さんの会員詳細</h4>

<div class = "form-group">
<label for="user_image">会員ID</label>
<%= @customers.id %>
</div>

<div class = "form-group">
<label for="user_image">氏名</label>
<%= @customers.first_name %><%= @customers.last_name %>
</div>

<div class = "form-group">
<label for="user_image">フリガナ</label>
<%= @customers.first_kana_name %><%= @customers.last_kana_name %>
</div>

<div class = "form-group">
<label for="user_image">郵便番号</label>
<%= @customers.postal_code %>
</div>

<div class = "form-group">
<label for="user_image">住所</label>
<%= @customers.address %>
</div>

<div class = "form-group">
<label for="user_image">電話番号</label>
<%= @customers.telephone_number %>
</div>

<div class = "form-group">
<label for="user_image">メールアドレス</label>
<%= @customers.email %>
</div>

<div class = "form-group">
<label for="user_image">会員ステータス</label>
<% if @customers.is_acactive == true %>
    <td>有効</td>
<% elsif @customers.is_acactive == false %>
    <td>退会</td>
<% end %>
</div>

<%= link_to '編集する', edit_admin_customer_path, class: "btn btn-sm btn-success"%>
<%= link_to '注文履歴一覧を見る', admin_root_path, class: "btn btn-sm btn-success"%>
