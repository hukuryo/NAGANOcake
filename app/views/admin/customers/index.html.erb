<h4>会員一覧</h4>

<div class="col-md-8 offset-md-1">
   <table class="table table-hover table-inverse">
    <thead>
     <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
     </tr>
    </thead>
      <% @customers.each do |customer| %>
        <tbody>
          <tr>
           <td><%= customer.created_at %></td>
           <td><%= link_to customer.first_name, admin_customer_path(customer.id) %><%= link_to customer.last_name, admin_customer_path(customer.id) %></td>
           <td><%= customer.email %></td>
           <% if customer.is_acactive == true %>
            <td>有効</td>
            <% elsif customer.is_acactive == false %>
             <td>退会</td>
             <% end %>
          </tr>
        </tbody>
      <% end %>
    </table>
</div>