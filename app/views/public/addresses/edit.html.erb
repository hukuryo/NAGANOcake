<h4>配送先編集</h4>

<%= form_with model: @address, url: address_path, local:true do |f| %>

<div class="form-group">
<label for="user_name">郵便番号</label>
<%= f.text_field :postal_code, class: "form-control name", autofocus: true, placeholder:"ハイフンなし"%>
</div>

<div class="form-group">
<label for="user_name">住所</label>
<%= f.text_field :address, class: "form-control name", autofocus: true, placeholder:"東京都渋谷区代々木神薗町0-0"%>
</div>

<div class="form-group">
<label for="user_name">宛名</label>
<%= f.text_field :name, class: "form-control name", autofocus: true, placeholder:"令和道子"%>
</div>

<div class="form-group">
<%= f.submit "変更内容を保存", class: "btn btn-sm btn-success"%>
</div>

<% end %>