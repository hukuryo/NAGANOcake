<h4>注文情報確認</h4>

<div class="col-md-8 offset-md-1">
 <diV>
   <table class="table table-hover table-inverse">
    <thead>
     <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
     </tr>
    </thead>
    <% @sum = 0 %>
    <tbody>
     <% @cart_items.each do |cart_item| %>
      <tr>
       <td><%= attachment_image_tag cart_item.item, :image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %><%= cart_item.item.name %></td>
       <td><%= (cart_item.item.price * 1.1).floor %></td>
       <td><%= cart_item.amount %></td>
       <td><%= (cart_item.item.price * 1.1).floor * cart_item.amount %></td>
      </tr>
      <% @sum += (cart_item.item.price * 1.1).floor * cart_item.amount %>
      <% end %>
    </tbody>
   </table>
   
  <table class="table table-hover table-inverse">
    <tr>
      <td>送料</td><td><%= @order.postage %></td>
    </tr>
    <tr>
      <td>商品合計</td><td><%= @sum %></td>
    </tr>
    <!--@sumという料金の合計が入っているものと送料を足したものを@order.total_paymentに入れている-->
    <% @order.total_payment = @sum + @order.postage %>
    <tr>
      <td>請求金額</td><td><%= @order.total_payment %></td>
    </tr>
  </table>
  <%#=  %>
  </div>
</div>

<div class="form-group">
      <label for="user_name"><strong>支払方法</strong></label>
      <%= @order.payment_method_i18n %>
</div>

<div class="form-group">
      <label for="user_name"><strong>お届け先</strong></label>
      <%= @order.postal_code %> <%= @order.address %><br>
      <%= @order.name %>
</div>
<!--カラムに情報を入れてデータに送っている-->
<%= form_with model: @order, url: orders_path, method: :post, local:true do |f| %>
<%= f.hidden_field :address, :value => @order.address %>
<%= f.hidden_field :postal_code, :value => @order.postal_code %>
<%= f.hidden_field :name, :value => @order.name %>
<%= f.hidden_field :total_payment, :value => @order.total_payment %>
<%= f.hidden_field :payment_method, :value => @order.payment_method %>
<%= f.hidden_field :postage, :value => @order.postage %>
<%= f.hidden_field :order_status, :value => @order.order_status %>
<%= f.hidden_field :customer_id, :value => current_customer.id %>
<div class="form-group">
      <%= f.submit "注文を確定する",  class: "btn btn-sm btn-success"%>
</div>
<% end %>